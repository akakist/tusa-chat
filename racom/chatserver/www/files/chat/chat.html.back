function AddUser(z,upd)
{
//    if(is_ignored(z.id)) z.ign=1;
    if(z.v) z.nu="+"+z.nu;
	var found,nu;
	nu=0;
	found=0;
	UsrNew=new Array();
	for(var i in UsrList){
		lun=UsrList[i].nu;
		nun=z.nu;
		if (found==0){
			if (z.nu<UsrList[i].nu){
			    if (z.nu!=UsrList[i].nu){
					UsrNew[nu]=z;
					nu++;
			    }
				found=1;
			}
			else if (z.nu==UsrList[i].nu){
				return;
			}
			UsrNew[nu]=UsrList[i];
		}
		else{
			UsrNew[nu]=UsrList[i];
		}
		nu++;
	}
	if (found==0){
		UsrNew[nu]=z;
	}
	UsrList=UsrNew;
	need_update=true;
	update_c++;
	if(update_c<10){
		update_int=2000*(UsrList.length/30);
		clearTimeout(timer_update);
		timer_update=setTimeout('OnTimerUpdate()',update_int);
	}
}

